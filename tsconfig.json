// tsconfig.json
{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
      "@layout/*": ["src/components/layout/*"],
      "@logos/*": ["src/assets/Logos/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@helpers/*": ["src/helpers/*"]
    }
  }
}