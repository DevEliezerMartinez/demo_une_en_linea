---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/assets/imagenes/heros/maestrias_desktop.webp";
import Hero_mobile from "@/assets/imagenes/heros/maestrias_mobile.webp";
import InformativeCard from "@components/sections/oferta/CardInformativa.astro";
import ImagenCard from "@/assets/imagenes/CardsNiveles/maestrias_en_linea.webp";
import Estadisticas from "@components/sections/oferta/Estadisticas.astro";
import Carreras from "@components/sections/oferta/maestrias/Carreras.astro";
import Requisitos from "@components/sections/oferta/Requisitos.astro";
import Faqs from "@components/sections/shared/Faq.astro";
import { obtenerDatos } from "@/helpers/faq.js";
const infoActual = obtenerDatos("maestria");

import { UserPlus, Phone } from "@lucide/astro";

// Datos extraídos de la imagen
const listaRequisitos = [
  {
    id: 1,
    label: "Acta de Nacimiento",
    copies: 3,
    original: true,
    note: "Con fecha de expedición no mayor a un año y en excelente estado. Puede descargarse gratuitamente por internet, imprimirse a color y en hoja opalina para presentarse como original.",
    link: "https://actasenlinea.jalisco.gob.mx/actasescolares/Nacimiento.do",
  },
  {
    id: 2,
    label: "Certificado de Licenciatura",
    copies: 3,
    original: true,
    note: "En caso de que el certificado haya sido expedido en un estado distinto a Jalisco, deberá estar legalizado por la autoridad correspondiente. No se requiere legalización si el documento contiene la leyenda: “ESTE DOCUMENTO ES VÁLIDO EN LOS ESTADOS UNIDOS MEXICANOS Y NO REQUIERE TRÁMITES ADICIONALES DE LEGALIZACIÓN”.",
    link: null,
  },
  {
    id: 3,
    label: "Carta de validación de Certificado de Licenciatura",
    copies: 3,
    original: true,
    note: "Documento obligatorio. Sin esta carta, el certificado no es válido y no se acepta para la inscripción ante secretaría. Debe estar dirigida a quien corresponda o a la Mtra. Fanny Guadalupe Valdivia Márquez, Directora de Incorporación y Servicios Escolares SICyT. Debe presentarse en hoja membretada e incluir folio del certificado, nombre del alumno y fecha de expedición.",
    link: null,
  },
  {
    id: 4,
    label: "Título Profesional",
    copies: 3,
    original: false,
    note: "Presentar tres copias del título.",
    link: null,
  },
  {
    id: 5,
    label: "Cédula Profesional",
    copies: 3,
    original: false,
    note: "Presentar tres copias legibles.",
    link: null,
  },
  {
    id: 6,
    label: "Identificación Oficial vigente con fotografía",
    copies: 3,
    original: false,
    note: "Debe encontrarse vigente y ser claramente legible.",
    link: null,
  },
  {
    id: 7,
    label: "Identificación Oficial vigente con fotografía",
    copies: 3,
    original: false,
    note: "Debe encontrarse vigente y ser claramente legible.",
    link: null,
  },
  {
    id: 8,
    label: "Comprobante de Domicilio",
    copies: 3,
    original: false,
    note: "Comprobante reciente.",
    link: null,
  },
  {
    id: 9,
    label: "Fotografías tamaño infantil",
    copies: 8,
    original: false,
    note: "8 fotografías tamaño infantil en blanco y negro, con vestimenta presentable. Pueden ser de Farmacias Guadalajara.",
    link: null,
  },
];

const linkPdf = "/requisitos/maestrias.pdf"; // Ruta a tu PDF
---

<Layout
  title="Maestrías en Línea UNE | Estudia y Trabaja"
  description="Estudia tu Maestría 100% en línea. 45 carreras con validez oficial SICYT. Horarios flexibles para gente que trabaja."
>
  <main class="min-h-screen">
    {/* Hero Section */}
    <section
      class="relative min-h-[85vh] md:min-h-[65vh] bg-cover bg-center bg-no-repeat"
    >
      {/* Desktop Background */}
      <div
        class="absolute inset-0 hidden md:block bg-cover bg-center bg-no-repeat"
        style={{ backgroundImage: `url(${Hero.src})` }}
      >
        <div class="absolute inset-0 bg-black/40"></div>
        {/* Overlay oscuro para legibilidad */}
      </div>

      {/* Mobile Background */}
      <div
        class="absolute inset-0 block md:hidden bg-cover bg-center bg-no-repeat"
        style={{ backgroundImage: `url(${Hero_mobile.src})` }}
      >
        <div class="absolute inset-0 bg-black/40"></div>
      </div>

      {/* Hero Content */}
      <div
        class="relative z-10 container mx-auto px-4 h-full min-h-[85vh] md:min-h-[65vh] flex flex-col justify-center"
      >
        <div class="text-center text-white max-w-5xl mx-auto space-y-6">
          {/* Main Title - Copy aspiracional */}
          <h1
            class="text-4xl md:text-6xl lg:text-7xl font-bold tracking-tight leading-tight"
          >
            Maestrías en línea, <br />
            a tu propio ritmo
          </h1>

          {/* Description - Atacando el dolor de "falta de tiempo" */}
          <p
            class="text-lg md:text-xl leading-relaxed max-w-3xl mx-auto font-light text-gray-100"
          >
            Únete a los profesionales que están transformando su futuro con
            nuestras maestrías virtuales. Una plataforma moderna, docentes
            expertos y un modelo diseñado para tu estilo de vida.
          </p>
        </div>
      </div>
    </section>

    {/* Floating Card - Barra de Acción */}
    <div class="relative -top-16 z-20 px-4">
      <div
        class="bg-azul-une rounded-xl px-8 py-8 shadow-2xl max-w-4xl mx-auto"
      >
        <div class="flex flex-col items-center justify-center gap-6">
          <h3 class="text-white text-xl font-semibold text-center md:hidden">
            ¿Listo para empezar?
          </h3>

          <div class="flex flex-col sm:flex-row gap-4 w-full justify-center">
            {/* CTA Primario - Visualmente destacado */}
            <a
              href="/contacto/solicitarinformacion"
              class="bg-white text-azul-une hover:bg-cyan-50 font-semibold py-4 px-8 rounded-lg text-lg transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 flex items-center justify-center gap-2 whitespace-nowrap w-full sm:w-auto"
            >
              ¡Quiero inscribirme!
              <UserPlus size={22} />
            </a>

            {/* CTA Secundario - Ghost button para menor jerarquía visual */}
            <a
              href="https://wa.me/523380000801?text=Hola,%20me%20gustaría%20recibir%20información%20sobre%20los%20programas%20académicos%20de%20UNE"
              target="_blank"
              rel="noopener noreferrer"
              class="border-2 border-white text-white hover:bg-white/10 font-semibold py-4 px-8 rounded-lg text-lg transition-colors duration-300 flex items-center justify-center gap-2 whitespace-nowrap w-full sm:w-auto"
              aria-label="Contactar por WhatsApp con un asesor UNE"
            >
              Hablar con un asesor
              <svg
                width="22"
                height="22"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <path
                  d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    {/* Sección Informativa - Ajustada a Virtual/Ejecutivo */}
    <InformativeCard
      studentImageSrc={ImagenCard.src}
      title="MAESTRÍAS PARA EL MUNDO REAL"
      description="Potencia tu trayectoria y lidera el cambio en tu industria. Nuestras maestrías te brindan herramientas de alta dirección y especialización práctica inmediata. Con validez oficial ante la SICyT, nuestro modelo virtual se adapta totalmente a tu agenda ejecutiva para que sigas creciendo profesionalmente sin pausas."
      features={[
        { icon: "Laptop", label: "Plataforma 24/7" },
        { icon: "School", label: "Validez Oficial (SICyT)" },
        { icon: "Clock", label: "Balance vida-trabajo-estudio" },
        { icon: "Users", label: "Docentes expertos en su área" },
      ]}
    />

    <Estadisticas maestria={true} />

    <Carreras />

    <Requisitos requirements={listaRequisitos} pdfUrl={linkPdf} />

    <Faqs faqs={infoActual} />
  </main>
</Layout>
