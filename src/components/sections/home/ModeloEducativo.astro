---
import { CircleArrowOutUpRight } from "lucide-astro";

interface Props {
  className?: string;
}

const { className = "" } = Astro.props;

const steps = [
  {
    number: "01",
    title: "Conéctate a tu plataforma",
    description:
      "Desde tu entorno virtual, encuentra todo lo que necesitas para estudiar: videos, documentos y más.",
  },
  {
    number: "02",
    title: "Estudia a tu ritmo",
    description:
      "Accede 24/7 a materiales de apoyo diseñados para fortalecer tu aprendizaje.",
  },
  {
    number: "03",
    title: "Practica cada semana",
    description:
      "Haz las actividades de la semana para aplicar lo que aprendes.",
  },
];
---

<section class={`py-14 md:pt-18 ${className}`}>
  <div class="container mx-auto px-4">
    <div class="mb-12 md:mb-16 text-center">
      <p class="text-sm font-bold text-gray-500 uppercase tracking-widest mb-2">
        MODELO EDUCATIVO
      </p>
      <h2 class="text-3xl md:text-5xl font-extrabold text-gray-900">
        ¿Cómo funciona estudiar en UNE?
      </h2>
    </div>

    <div class="stack-container mb-12 md:mb-16">
      {
        steps.map((step, index) => (
          <div class="card-item" style={`--index: ${index + 1};`}>
            <div class="card-content bg-[#001A71] text-white p-8 rounded-3xl shadow-2xl border border-white/10 h-full">
              <div class="flex flex-col gap-6 items-start h-full">
                <div class="shrink-0">
                  <div class="w-16 h-16 rounded-2xl bg-white/10 backdrop-blur-md border border-white/20 flex items-center justify-center mb-6">
                    <span class="text-2xl font-semibold">{step.number}</span>
                  </div>
                  <h3 class="text-2xl font-bold mb-4">{step.title}</h3>
                </div>

                <div class="flex-1 flex flex-col justify-between">
                  <div class="card-description">
                    <p class="text-lg text-white/80 leading-relaxed">
                      {step.description}
                    </p>
                  </div>
                  <div class="mt-8 w-20 h-1.5 bg-[#E22319] rounded-full" />
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    <a
      href="/acerca/modelo-educativo"
      class="text-xl font-semibold my-18 border-b border-azul-une text-center text-azul-une flex items-center gap-1 w-auto max-w-96"
    >
      Ver detalles del modelo educativo <CircleArrowOutUpRight />
    </a>
  </div>
</section>

<style>
  .stack-container {
    display: flex;
    flex-direction: column;
  }

  .card-item {
    position: sticky;
    top: calc(4vh + (var(--index) * 6rem));
    padding-top: calc((var(--index) - 1) * 5rem);
    margin-bottom: 4rem;
    view-timeline-name: --card-stack;
    view-timeline-axis: block;
  }

  .card-content {
    transform-origin: center top;
    animation: linear scale-down forwards;
    animation-timeline: --card-stack;
    animation-range: exit 0% exit 100%;
    min-height: 350px;
  }

  @keyframes scale-down {
    to {
      transform: scale(calc(1 - (var(--index) * 0.02)));
      filter: brightness(0.6) blur(2px);
    }
  }

  /* Mobile: Keep the stacking effect */
  @media (max-width: 768px) {
    .stack-container {
      max-width: 900px;
    }
    .card-item {
      padding-top: calc((var(--index) - 1) * 2rem);
      margin-bottom: 2rem;
    }
    .card-content {
      animation: none; /* Esto quita el escalado, brillo y blur al scrollear */
      filter: none !important;
      min-height: auto;
    }
  }

  /* Desktop: Simple row layout */
  @media (min-width: 769px) {
    .stack-container {
      flex-direction: row;
      gap: 2rem;
      max-width: 100%;
    }

    .card-item {
      position: relative;
      top: auto;
      padding-top: 0;
      margin-bottom: 0;
      flex: 1;
    }

    .card-content {
      animation: none;
      min-height: 100%;
    }
  }
</style>
