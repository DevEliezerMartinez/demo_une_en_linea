---
import { Image } from "astro:assets";
import Logo from "@/assets/Logos/Une_azul.png";

// Definimos la estructura del objeto de requisito de forma flexible
export interface Requirement {
  label: string; // Nombre del documento
  copies?: number; // Número de copias
  note?: string; // Nota extra
  link?: string; // Enlace opcional
  nombre?: string;
  nota?: string;
  enlace?: string;
}

// Permitimos strings directos para casos simples
export type RequirementInput = Requirement | string;

interface Props {
  requirements: RequirementInput[];
  pdfUrl: string;
  title?: string;
}

const {
  requirements,
  pdfUrl,
  title = "Requisitos de inscripción",
} = Astro.props;

// Normalizamos los requisitos para el template
const normalizedRequirements = requirements.map((req) => {
  if (typeof req === "string") {
    return { label: req };
  }
  // Unificamos las propiedades (prioridad a las de español si existen)
  return {
    label: req.label || req.nombre || "",
    note: req.note || req.nota,
    link: req.link || req.enlace,
    copies: req.copies,
  };
});
---

<section
  class="w-full bg-azul-une py-16 px-4 md:px-8 relative overflow-hidden"
  id="requisitos"
>
  <div
    class="absolute top-0 right-0 w-64 h-64 rounded-full -mr-32 -mt-32 blur-3xl bg-white/10"
  >
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div
      class="mb-10 flex flex-col md:flex-row md:items-end justify-between gap-4"
    >
      <div class="text-center md:text-left">
        <h2 class="text-white text-3xl md:text-5xl font-bold tracking-tight">
          {title}
        </h2>
        <p class="text-blue-100/80 mt-2 text-lg">
          Asegúrate de contar con la siguiente documentación completa.
        </p>
      </div>
    </div>

    <div
      class="bg-white rounded-3xl shadow-2xl relative overflow-hidden border border-white/20"
    >
      <div
        class="absolute inset-0 flex items-center justify-center pointer-events-none opacity-[0.03]"
      >
        <Image
          src={Logo}
          alt="UNE Logo"
          class="w-1/2 object-contain grayscale"
        />
      </div>

      <div class="relative z-10 p-8 md:p-12">
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-6 mb-12">
          {
            normalizedRequirements.map((req) => (
              <li class="group flex items-start gap-4 p-4 rounded-xl transition-all hover:bg-gray-50 border border-transparent hover:border-gray-100">
                <div class="shrink-0 mt-1">
                  <div class="bg-green-100 text-green-600 rounded-full p-1 group-hover:bg-green-500 group-hover:text-white transition-colors">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-4 w-4"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                      />
                    </svg>
                  </div>
                </div>

                <div class="flex flex-col gap-1 w-full">
                  <div class="flex flex-wrap items-center gap-2">
                    <span class="text-gray-800 text-lg font-semibold leading-tight">
                      {req.link ? (
                        <a
                          href={req.link}
                          target="_blank"
                          class="hover:text-azul-une underline decoration-dotted underline-offset-4"
                        >
                          {req.label}
                        </a>
                      ) : (
                        req.label
                      )}
                    </span>

                    {/* Badge Copias - Moved to the right */}
                    {req.copies && req.copies > 0 && (
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-azul-une text-white border border-gray-200 shadow-sm whitespace-nowrap">
                        {req.copies} Copias
                      </span>
                    )}
                  </div>

                  {/* Notas adicionales */}
                  {req.note && (
                    <p class="text-sm text-gray-500 italic leading-snug">
                      {req.note}
                    </p>
                  )}
                </div>
              </li>
            ))
          }
        </ul>

        <div
          class="pt-8 border-t border-gray-100 flex flex-col md:flex-row items-center justify-between gap-6 text-center md:text-left"
        >
          <div class="max-w-sm">
            <p class="text-gray-500">
              ¿Tienes dudas sobre algún documento? <br />
              <a
                href="/contacto/solicitarinformacion"
                class="text-azul-une cursor-pointer hover:underline"
              >
                Contacta a un asesor escolar.
              </a>
            </p>
          </div>

          <a
            href={pdfUrl}
            target="_blank"
            class="w-full md:w-auto flex items-center justify-center gap-3 bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-8 rounded-2xl shadow-xl shadow-green-200 transition-all hover:scale-[1.02] active:scale-95"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
              ></path>
            </svg>
            DESCARGAR REQUISITOS (PDF)
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
