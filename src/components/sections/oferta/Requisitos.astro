---
import { Image } from "astro:assets";
import Logo from "@/assets/Logos/Une_azul.png";

export interface Requirement {
  label: string;
  copies?: number;
  note?: string;
  link?: string;
  nombre?: string;
  nota?: string;
  enlace?: string;
}

export type RequirementInput = Requirement | string;

interface Props {
  requirements: RequirementInput[];
  pdfUrl: string;
  title?: string;
}

const {
  requirements,
  pdfUrl,
  title = "Requisitos de inscripción",
} = Astro.props;

const normalizedRequirements = requirements.map((req) => {
  if (typeof req === "string") {
    return { label: req };
  }
  return {
    label: req.label || req.nombre || "",
    note: req.note || req.nota,
    link: req.link || req.enlace,
    copies: req.copies,
  };
});
---

<section
  class="w-full bg-azul-une py-12 px-4 md:px-8 relative overflow-hidden"
  id="requisitos"
>
  <div
    class="absolute top-0 right-0 w-64 h-64 rounded-full -mr-32 -mt-32 blur-3xl bg-white/10"
  >
  </div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="mb-8 text-center md:text-left">
      <h2 class="text-white text-3xl md:text-4xl font-bold tracking-tight">
        {title}
      </h2>
      <p class="text-blue-100/80 mt-2">
        Asegúrate de contar con la siguiente documentación completa.
      </p>
    </div>

    <div
      class="bg-white rounded-2xl shadow-2xl relative overflow-hidden border border-white/20"
    >
      <div
        class="absolute inset-0 flex items-center justify-center pointer-events-none opacity-[0.03]"
      >
        <Image
          src={Logo}
          alt="UNE Logo"
          class="w-1/2 object-contain grayscale"
        />
      </div>

      <div class="relative z-10 p-6 md:p-8">
        <!-- Control para expandir/colapsar todo -->
        <div class="flex justify-end mb-4">
          <button
            id="toggle-all-btn"
            class="text-sm font-medium text-azul-une hover:text-blue-700 transition-colors flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-blue-50"
          >
            <svg
              id="toggle-icon"
              class="h-4 w-4 transition-transform"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
            <span id="toggle-text">Mostrar todo</span>
          </button>
        </div>

        <!-- Lista compacta con acordeón de detalles -->
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-8">
          {
            normalizedRequirements.map((req, index) => (
              <li class="group">
                <details class="rounded-lg transition-all hover:bg-gray-50 border border-gray-100">
                  <summary class="flex items-center gap-3 p-3 cursor-pointer list-none">
                    <div class="shrink-0">
                      <div class="bg-green-100 text-green-600 rounded-full p-1 group-hover:bg-green-500 group-hover:text-white transition-colors">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-4 w-4"
                          viewBox="0 0 20 20"
                          fill="currentColor"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                      </div>
                    </div>

                    <div class="flex-1 min-w-0">
                      <span class="text-gray-800 font-medium leading-tight block truncate">
                        {req.link ? (
                          <a
                            href={req.link}
                            target="_blank"
                            class="hover:text-azul-une underline decoration-dotted underline-offset-4"
                            onclick="event.stopPropagation();"
                          >
                            {req.label}
                          </a>
                        ) : (
                          req.label
                        )}
                      </span>
                    </div>

                    {req.copies && req.copies > 0 && (
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-azul-une text-white shrink-0">
                        {req.copies} Copias
                      </span>
                    )}

                    {req.note && (
                      <svg
                        class="h-4 w-4 text-gray-400 shrink-0 transition-transform group-open:rotate-180"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M19 9l-7 7-7-7"
                        />
                      </svg>
                    )}
                  </summary>

                  {req.note && (
                    <div class="px-3 pb-3 pt-1 pl-12">
                      <p class="text-sm text-gray-600 italic leading-relaxed">
                        {req.note}
                      </p>
                    </div>
                  )}
                </details>
              </li>
            ))
          }
        </ul>

        <!-- Footer compacto -->
        <div
          class="pt-6 border-t border-gray-100 flex flex-col md:flex-row items-center justify-between gap-4"
        >
          <p class="text-sm text-gray-500 text-center md:text-left">
            ¿Dudas?{" "}
            <a
              href="/contacto/solicitarinformacion"
              class="text-azul-une hover:underline font-medium"
            >
              Contacta a un asesor
            </a>
          </p>

          <a
            href={pdfUrl}
            target="_blank"
            class="w-full md:w-auto flex items-center justify-center gap-2 bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-xl shadow-lg shadow-green-200 transition-all hover:scale-[1.02] active:scale-95"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
              ></path>
            </svg>
            Descargar PDF
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleBtn = document.getElementById("toggle-all-btn");
    const toggleText = document.getElementById("toggle-text");
    const toggleIcon = document.getElementById("toggle-icon");
    const allDetails = document.querySelectorAll("details");

    let allExpanded = false;

    toggleBtn?.addEventListener("click", () => {
      allExpanded = !allExpanded;

      allDetails.forEach((detail) => {
        detail.open = allExpanded;
      });

      if (toggleText && toggleIcon) {
        toggleText.textContent = allExpanded ? "Ocultar todo" : "Mostrar todo";
        toggleIcon.style.transform = allExpanded
          ? "rotate(180deg)"
          : "rotate(0deg)";
      }
    });

    // Actualizar el estado del botón si el usuario expande/colapsa manualmente
    allDetails.forEach((detail) => {
      detail.addEventListener("toggle", () => {
        const allOpen = Array.from(allDetails).every((d) => d.open);
        const allClosed = Array.from(allDetails).every((d) => !d.open);

        if (allOpen && !allExpanded) {
          allExpanded = true;
          if (toggleText && toggleIcon) {
            toggleText.textContent = "Ocultar todo";
            toggleIcon.style.transform = "rotate(180deg)";
          }
        } else if (allClosed && allExpanded) {
          allExpanded = false;
          if (toggleText && toggleIcon) {
            toggleText.textContent = "Mostrar todo";
            toggleIcon.style.transform = "rotate(0deg)";
          }
        }
      });
    });
  });
</script>
