---
import { Mountain, ExternalLink, FileText } from "lucide-astro";

// Definición de las propiedades (Props) con TypeScript
interface Props {
  durationLabel?: string;
  duration: string;
  modeLabel?: string;
  mode: string;
  benefitsLabel?: string;
  benefits: string[];
  outcomesTitle?: string;
  outcomes: string[];
  // Props nuevas para el brochure
  brochureUrl?: string;
  brochureButtonLabel?: string;
}

const {
  durationLabel = "Duración",
  duration,
  modeLabel = "Modalidad",
  mode,
  benefitsLabel = "Beneficios",
  benefits,
  outcomesTitle = "Al finalizar esta podrás:",
  outcomes,
  brochureUrl,
  brochureButtonLabel = "Descargar Folleto",
} = Astro.props;
---

<section class="w-full max-w-6xl mx-auto p-6 bg-white">
  <div class="grid grid-cols-1 md:grid-cols-10 gap-8">
    {/* --- Columna Izquierda: Información General --- */}
    <div
      class="md:col-span-4 flex flex-col md:pr-10 md:border-r border-gray-300"
    >
      {/* Bloque Duración */}
      <div class="mb-6">
        <h3 class="text-red-600 font-bold text-2xl mb-1">{durationLabel}</h3>
        <p class="text-gray-800 text-lg">{duration}</p>
      </div>

      {/* Bloque Modalidad */}
      <div class="mb-6">
        <h3 class="text-red-600 font-bold text-2xl mb-1">{modeLabel}</h3>
        <p class="text-gray-800 text-lg">{mode}</p>
      </div>

      {/* Bloque Beneficios */}
      <div>
        <h3 class="text-red-600 font-bold text-2xl mb-3">{benefitsLabel}</h3>
        <ul class="space-y-2">
          {
            benefits.map((item) => (
              <li class="flex items-start text-sm text-gray-700 leading-relaxed">
                {/* Bullet point simple */}
                <span class="mr-2 mt-1.5 h-1.5 w-1.5 flex-shrink-0 rounded-full bg-gray-500" />
                {item}
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    {/* --- Columna Derecha: Objetivos + Brochure --- */}
    <div class="md:col-span-6 flex flex-col justify-start md:pl-4">
      {/* Icono Principal (Lucide) */}
      <div class="mb-4 text-blue-900">
        <Mountain size={48} strokeWidth={1.5} />
      </div>

      <h3 class="text-red-600 font-bold text-xl mb-6">
        {outcomesTitle}
      </h3>

      {/* Lista de Outcomes */}
      <ul class="space-y-3 mb-10">
        {
          outcomes.map((item) => (
            <li class="flex items-start text-gray-800 text-base leading-snug">
              <span class="mr-3 mt-2 h-1.5 w-1.5 flex-shrink-0 rounded-full bg-black" />
              {item}
            </li>
          ))
        }
      </ul>

      {/* --- SECCIÓN BROCHURE (Condicional) --- */}
      {
        brochureUrl && (
          <div class="mt-auto border-t border-gray-200 pt-6">
            {/* Header del Brochure con Botón */}
            <div class="flex flex-wrap items-center justify-between mb-4 gap-3">
              <div class="flex items-center text-gray-700 font-semibold gap-2">
                <FileText className="text-red-600" size={20} />
                <span>Folleto Digital</span>
              </div>

              <a
                href={brochureUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gray-900 rounded-md hover:bg-gray-800 transition-colors shadow-sm"
              >
                {brochureButtonLabel}
                <ExternalLink size={16} />
              </a>
            </div>

            {/* Iframe Contenedor con Aspect Ratio */}
            <div class="w-full relative rounded-lg overflow-hidden border border-gray-200 shadow-sm bg-gray-50">
              {/* Usamos h-[500px] o aspect-video dependiendo de la preferencia */}
              <iframe
                src={brochureUrl}
                class="w-full h-[300px]"
                title="Visor de brochure"
                allow="autoplay; encrypted-media"
                loading="lazy"
                allowfullscreen
              />
            </div>
          </div>
        )
      }
    </div>
  </div>
</section>
